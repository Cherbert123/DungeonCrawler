package LeagueInvaders;

import java.awt.Color;
import java.awt.Graphics;

import lootPackage.GameObject;

public class Mothership extends GameObject{
	int speed;
	public Mothership(int x, int y, int width, int height){
		super();
		this.x = x;
		this.y = y;
		this.width = width;
		this.height = height;
		speed = 2;
		
	}
	public void update(){
		super.update();
		y += speed;
		if(y <= 0){
			isAlive = false;
		}
	}
	public void draw(Graphics g){
		g.drawImage(GamePanel.alienMImg, x, y, 110, 50, null);
	}
}
